<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @user.microposts.length > 0 %>
  <p>
    <strong>First post:</strong>
    <%= @user.microposts.first.content %>
  </p>

  <h3>
    <strong><%=@user.name%>'s posts:</strong>
  </h3>
  <% @user.microposts.each do |post| %>
    <p><%= post.content %></p>
  <% end %>
<% else %>
  <p><%= @user.name %> hasn't written any posts yet!</p>
<% end %>


<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
